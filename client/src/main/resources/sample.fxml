<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>
<?import javafx.scene.control.PasswordField?>
<VBox fx:controller="client.Controller"
      xmlns:fx="http://javafx.com/fxml" alignment="center" >
    <stylesheets>
        <URL value="@/css/style.css"/>
    </stylesheets>
    <HBox fx:id="authenticField">
        <TextField fx:id="logField"  HBox.hgrow="ALWAYS" promptText="login"/>
        <PasswordField fx:id="passField"  HBox.hgrow="ALWAYS" promptText="password" onAction="#tryToLogin"/>
        <Button text="login" onAction="#tryToLogin" minWidth="100"/>
    </HBox>

    <TextArea fx:id="textArea" VBox.vgrow="ALWAYS"/>

    <HBox fx:id="sendMsgField" visible="false" managed="false">
        <TextField fx:id="textField" onAction="#sendOnClick" HBox.hgrow="ALWAYS" promptText="input text"/>
        <Button text="send" onAction="#sendOnClick"/>
    </HBox>
</VBox>